<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.odinarts.android.iq.MemoryLeaksActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Static Activity"
        android:id="@+id/buttonStaticActivities"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Static View"
        android:id="@+id/buttonStaticViews"
        android:layout_below="@+id/buttonStaticActivities"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inner Class"
        android:id="@+id/buttonInnerClasses"
        android:layout_below="@+id/buttonStaticViews"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anonymous Class"
        android:id="@+id/buttonAnonymousClasses"
        android:layout_below="@+id/buttonInnerClasses"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler with anonymous runnable"
        android:id="@+id/buttonHandlers"
        android:layout_below="@+id/buttonAnonymousClasses"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread"
        android:id="@+id/buttonThreads"
        android:layout_below="@+id/buttonHandlers"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer Task"
        android:id="@+id/buttonTimerTasks"
        android:layout_below="@+id/buttonThreads"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Manager"
        android:id="@+id/buttonSensorManager"
        android:layout_below="@+id/buttonTimerTasks"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to cause memory leaks in Android"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
